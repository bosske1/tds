                    '@TdsBundle/Resources/public/js/models/Tds.js'
                    '@TdsBundle/Resources/public/js/collections/Tds.js'
                    '@TdsBundle/Resources/public/js/parser/TdsHtmlToJson.js'
                    '@TdsBundle/Resources/public/js/parser/TdsJsonToHtml.js'
