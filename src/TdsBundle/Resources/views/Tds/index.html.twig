{% extends 'base.html.twig' %}

{% block body %}

    <div id="wrapper">
        <!-- Navigation -->
        {% include 'TdsBundle:Tds:templates/nav.html.twig' %}

        <!-- Content -->
        <div id="page-wrapper">
            <div id="container-fluid">
                <div id="main-container"></div>

                {% include 'TdsBundle:Tds:dashboard.html.twig' %}
                {% include 'TdsBundle:Tds:administration.html.twig' %}
                {% include 'TdsBundle:Tds:templates/tds.html.twig' %}
